/* Luxury Fashion Footer Styles */

.footer {
  background-color: #0a0a0a;
  color: #e8e8e8;
  padding: 80px 0 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
  letter-spacing: 0.5px;
  position: relative;
}

.footer::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg, transparent, rgba(232, 232, 232, 0.2) 50%, transparent);
}

.footer .row {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 40px;
}

.footer .columns {
  margin-bottom: 60px;
}

/* Widget Styles */
.widget {
  padding: 0 20px;
}

.thb-widget-title {
  font-size: 11px;
  font-weight: 500;
  letter-spacing: 2px;
  text-transform: uppercase;
  margin-bottom: 30px;
  color: #ffffff;
  position: relative;
  padding-bottom: 15px;
}

.thb-widget-title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 30px;
  height: 1px;
  background-color: #ffffff;
  transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.widget:hover .thb-widget-title::after {
  width: 60px;
}

/* Text Widget */
.widget--text .rte {
  font-size: 13px;
  line-height: 1.8;
  color: #b8b8b8;
  font-weight: 300;
}

.widget--text .rte p {
  margin-bottom: 15px;
}

.widget--text img {
  max-width: 180px;
  margin-bottom: 25px;
  opacity: 0.95;
  transition: opacity 0.3s ease;
}

.widget--text img:hover {
  opacity: 1;
}

/* Text Button */
.text-button {
  display: inline-block;
  font-size: 11px;
  font-weight: 500;
  letter-spacing: 1.5px;
  text-transform: uppercase;
  color: #ffffff;
  text-decoration: none;
  padding: 12px 0;
  position: relative;
  margin-top: 10px;
  transition: all 0.3s ease;
}

.text-button::after {
  content: '→';
  margin-left: 8px;
  display: inline-block;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.text-button:hover {
  color: #ffffff;
  letter-spacing: 2px;
}

.text-button:hover::after {
  transform: translateX(5px);
}

/* Menu Widget */
.widget--menu .thb-widget-menu {
  list-style: none;
  margin: 0;
  padding: 0;
}

.widget--menu .thb-widget-menu > li {
  margin-bottom: 12px;
  position: relative;
}

.widget--menu .thb-widget-menu a {
  font-size: 13px;
  color: #b8b8b8;
  text-decoration: none;
  font-weight: 300;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: inline-block;
  position: relative;
}

.widget--menu .thb-widget-menu a::before {
  content: '';
  position: absolute;
  bottom: -2px;
  left: 0;
  width: 0;
  height: 1px;
  background-color: #ffffff;
  transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.widget--menu .thb-widget-menu a:hover {
  color: #ffffff;
  transform: translateX(3px);
}

.widget--menu .thb-widget-menu a:hover::before {
  width: 100%;
}

.widget--menu .thb-widget-menu .active > a {
  color: #ffffff;
}

/* Collapsible Title (Mobile) */
.widget--menu .thb-widget-title.collapsible {
  background: none;
  border: none;
  width: 100%;
  text-align: left;
  cursor: pointer;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.widget--menu .thb-widget-title.collapsible span::before {
  content: '+';
  font-size: 14px;
  font-weight: 300;
  transition: transform 0.3s ease;
}

.widget--menu .thb-widget-title.collapsible.active span::before {
  content: '−';
}

/* Social Links */
.widget--social .social-links,
.social-links {
  display: flex;
  gap: 20px;
  margin-top: 25px;
}

.social-links a {
  width: 38px;
  height: 38px;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid rgba(232, 232, 232, 0.2);
  border-radius: 50%;
  color: #b8b8b8;
  text-decoration: none;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.social-links a::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background-color: #ffffff;
  transform: translate(-50%, -50%);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 0;
}

.social-links a:hover {
  border-color: #ffffff;
  color: #0a0a0a;
  transform: translateY(-3px);
}

.social-links a:hover::before {
  width: 100%;
  height: 100%;
}

.social-links a svg {
  width: 16px;
  height: 16px;
  position: relative;
  z-index: 1;
  transition: all 0.4s ease;
}

/* Email Signup */
.widget--signup .rte {
  font-size: 13px;
  line-height: 1.6;
  color: #b8b8b8;
  margin-bottom: 25px;
  font-weight: 300;
}

.email-signup-form {
  position: relative;
}

.email-signup-form input[type="email"] {
  width: 100%;
  background-color: transparent;
  border: none;
  border-bottom: 1px solid rgba(232, 232, 232, 0.3);
  color: #ffffff;
  font-size: 13px;
  padding: 12px 0;
  font-weight: 300;
  letter-spacing: 0.5px;
  transition: border-color 0.3s ease;
}

.email-signup-form input[type="email"]:focus {
  outline: none;
  border-bottom-color: #ffffff;
}

.email-signup-form input[type="email"]::placeholder {
  color: #666666;
  font-weight: 300;
}

.email-signup-form button {
  position: absolute;
  right: 0;
  bottom: 8px;
  background: none;
  border: none;
  color: #ffffff;
  font-size: 11px;
  font-weight: 500;
  letter-spacing: 1.5px;
  text-transform: uppercase;
  cursor: pointer;
  padding: 5px 0;
  transition: all 0.3s ease;
}

.email-signup-form button:hover {
  transform: translateX(3px);
  letter-spacing: 2px;
}

/* Sub Footer */
.sub-footer {
  margin-top: 40px;
  padding: 40px 0;
  border-top: 1px solid rgba(232, 232, 232, 0.1);
}

.sub-footer p {
  font-size: 11px;
  color: #666666;
  letter-spacing: 1px;
  margin: 20px 0;
  font-weight: 300;
}

.sub-footer a {
  color: #b8b8b8;
  text-decoration: none;
  transition: color 0.3s ease;
}

.sub-footer a:hover {
  color: #ffffff;
}

/* Localization (Language/Currency Switcher) */
.localization-form {
  display: flex;
  gap: 20px;
  margin-bottom: 20px;
}

.localization-form select {
  background-color: transparent;
  border: 1px solid rgba(232, 232, 232, 0.2);
  color: #b8b8b8;
  font-size: 11px;
  padding: 8px 30px 8px 15px;
  letter-spacing: 1px;
  text-transform: uppercase;
  cursor: pointer;
  transition: all 0.3s ease;
  font-weight: 300;
}

.localization-form select:hover {
  border-color: #ffffff;
  color: #ffffff;
}

.localization-form select:focus {
  outline: none;
  border-color: #ffffff;
}

/* Payment Icons */
.footer-payment-icons {
  display: flex;
  gap: 12px;
  justify-content: flex-end;
  flex-wrap: wrap;
  margin-bottom: 20px;
}

.footer-payment-icons figure {
  margin: 0;
  opacity: 0.5;
  transition: opacity 0.3s ease;
}

.footer-payment-icons figure:hover {
  opacity: 0.8;
}

.payment-icons__icon {
  height: 24px;
  width: auto;
  filter: brightness(0) invert(1);
}

/* Follow on Shop */
.footer--follow-on-shop {
  margin-top: 20px;
}

.footer--follow-on-shop .shopify-follow-on-shop-button {
  background-color: transparent !important;
  border: 1px solid rgba(232, 232, 232, 0.3) !important;
  transition: all 0.3s ease !important;
}

.footer--follow-on-shop .shopify-follow-on-shop-button:hover {
  border-color: #ffffff !important;
  transform: translateY(-2px);
}

/* Responsive Design */
@media (max-width: 768px) {
  .footer {
    padding: 60px 0 0;
  }
  
  .footer .row {
    padding: 0 20px;
  }
  
  .widget {
    padding: 0 10px;
  }
  
  .footer .columns {
    margin-bottom: 45px;
  }
  
  .thb-widget-title {
    font-size: 12px;
    margin-bottom: 20px;
  }
  
  .social-links {
    gap: 15px;
  }
  
  .footer-payment-icons {
    justify-content: flex-start;
    margin-top: 20px;
  }
}

/* Smooth Scrolling & Animations */
@media (prefers-reduced-motion: no-preference) {
  .footer * {
    transition-duration: 0.3s;
  }
}

/* Text Size Variations */
.text-size--small {
  font-size: 12px;
}

.text-size--medium {
  font-size: 13px;
}

.text-size--large {
  font-size: 14px;
}

/* Sub-menu Styles */
.widget--menu .sub-menu {
  list-style: none;
  margin-top: 10px;
  margin-left: 15px;
  padding-left: 15px;
  border-left: 1px solid rgba(232, 232, 232, 0.1);
}

.widget--menu .sub-menu li {
  margin-bottom: 8px;
}

.widget--menu .sub-menu a {
  font-size: 12px;
  color: #888888;
}

.widget--menu .sub-menu a:hover {
  color: #ffffff;
}

/* Full Width Option */
.full-width-row {
  max-width: 100% !important;
  padding-left: 60px !important;
  padding-right: 60px !important;
}

@media (max-width: 768px) {
  .full-width-row {
    padding-left: 20px !important;
    padding-right: 20px !important;
  }
}