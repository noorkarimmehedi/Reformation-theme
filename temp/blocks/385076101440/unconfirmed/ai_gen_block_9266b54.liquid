{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-neo-collection-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-neo-collection__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-neo-collection__header-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.header_spacing }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-neo-collection__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px;
    font-weight: {{ block.settings.title_weight }};
    text-transform: {{ block.settings.title_transform }};
  }

  .ai-neo-collection__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
  }

  .ai-neo-collection__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-neo-collection__card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_bg_color }};
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    box-shadow: {{ block.settings.shadow_x }}px {{ block.settings.shadow_y }}px 0px {{ block.settings.shadow_color }};
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    overflow: hidden;
  }

  .ai-neo-collection__card-{{ ai_gen_id }}:hover {
    transform: translate({{ block.settings.hover_translate_x }}px, {{ block.settings.hover_translate_y }}px);
    box-shadow: {{ block.settings.hover_shadow_x }}px {{ block.settings.hover_shadow_y }}px 0px {{ block.settings.shadow_color }};
  }

  .ai-neo-collection__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.image_bg_color }};
    border-bottom: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
  }

  .ai-neo-collection__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-neo-collection__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.image_bg_color }};
  }

  .ai-neo-collection__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-neo-collection__badge-{{ ai_gen_id }} {
    position: absolute;
    top: {{ block.settings.badge_spacing }}px;
    left: {{ block.settings.badge_spacing }}px;
    background-color: {{ block.settings.badge_bg_color }};
    color: {{ block.settings.badge_text_color }};
    padding: {{ block.settings.badge_padding_y }}px {{ block.settings.badge_padding_x }}px;
    font-size: {{ block.settings.badge_font_size }}px;
    font-weight: {{ block.settings.badge_font_weight }};
    border: {{ block.settings.badge_border_width }}px solid {{ block.settings.badge_border_color }};
    border-radius: {{ block.settings.badge_border_radius }}px;
    text-transform: {{ block.settings.badge_text_transform }};
  }

  .ai-neo-collection__content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
  }

  .ai-neo-collection__vendor-{{ ai_gen_id }} {
    font-size: {{ block.settings.vendor_size }}px;
    color: {{ block.settings.vendor_color }};
    margin: 0 0 {{ block.settings.vendor_spacing }}px;
    text-transform: {{ block.settings.vendor_transform }};
    font-weight: {{ block.settings.vendor_weight }};
  }

  .ai-neo-collection__product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 {{ block.settings.product_title_spacing }}px;
    font-weight: {{ block.settings.product_title_weight }};
    text-transform: {{ block.settings.product_title_transform }};
  }

  .ai-neo-collection__product-title-link-{{ ai_gen_id }} {
    color: inherit;
    text-decoration: none;
  }

  .ai-neo-collection__product-title-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-neo-collection__price-{{ ai_gen_id }} {
