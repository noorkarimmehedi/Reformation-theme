    background-color: {{ block.settings.view_all_bg_color }};
    color: {{ block.settings.view_all_text_color }};
    border: {{ block.settings.view_all_border_width }}px solid {{ block.settings.view_all_border_color }};
    border-radius: {{ block.settings.view_all_border_radius }}px;
    font-size: {{ block.settings.view_all_font_size }}px;
    font-weight: {{ block.settings.view_all_font_weight }};
    text-decoration: none;
    text-transform: {{ block.settings.view_all_text_transform }};
    box-shadow: {{ block.settings.view_all_shadow_x }}px {{ block.settings.view_all_shadow_y }}px 0px {{ block.settings.view_all_shadow_color }};
    transition: all 0.2s ease;
  }

  .ai-neo-collection__view-all-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.view_all_hover_bg_color }};
    color: {{ block.settings.view_all_hover_text_color }};
    transform: translate({{ block.settings.view_all_hover_translate_x }}px, {{ block.settings.view_all_hover_translate_y }}px);
    box-shadow: {{ block.settings.view_all_hover_shadow_x }}px {{ block.settings.view_all_hover_shadow_y }}px 0px {{ block.settings.view_all_shadow_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-neo-collection__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-neo-collection__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.8);
    }

    .ai-neo-collection__description-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.description_size }}px * 0.9);
    }
  }
{% endstyle %}

<div class="ai-neo-collection-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-neo-collection__container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.description != blank %}
      <div class="ai-neo-collection__header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-neo-collection__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-neo-collection__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.collection != blank %}
      <div class="ai-neo-collection__grid-{{ ai_gen_id }}">
        {% for product in block.settings.collection.products limit: block.settings.products_limit %}
          <div class="ai-neo-collection__card-{{ ai_gen_id }}">
            <div class="ai-neo-collection__image-wrapper-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 800 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-neo-collection__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="{{ product.featured_image.width }}"
                  height="{{ product.featured_image.height }}"
                >
              {% else %}
                <div class="ai-neo-collection__image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}

              {% if block.settings.show_badge %}
                {% if product.available == false %}
                  <div class="ai-neo-collection__badge-{{ ai_gen_id }}">{{ block.settings.sold_out_text }}</div>
                {% elsif product.compare_at_price > product.price %}
                  <div class="ai-neo-collection__badge-{{ ai_gen_id }}">{{ block.settings.sale_text }}</div>
                {% endif %}
              {% endif %}
            </div>

            <div class="ai-neo-collection__content-{{ ai_gen_id }}">
              {% if block.settings.show_vendor and product.vendor != blank %}
                <div class="ai-neo-collection__vendor-{{ ai_gen_id }}">{{ product.vendor }}</div>
              {% endif %}

              <h3 class="ai-neo-collection__product-title-{{ ai_gen_id }}">
                <a href="{{ product.url }}" class="ai-neo-collection__product-title-link-{{ ai_gen_id }}">
                  {{ product.title }}
                </a>
              </h3>

              {% if block.settings.show_price %}
                <div class="ai-neo-collection__price-{{ ai_gen_id }}">
                  {{ product.price | money }}
                  {% if product.compare_at_price > product.price %}
                    <span class="ai-neo-collection__price-compare-{{ ai_gen_id }}">
                      {{ product.compare_at_price | money }}
                    </span>
                  {% endif %}
                </div>
              {% endif %}

              {% if block.settings.show_button %}
                <a href="{{ product.url }}" class="ai-neo-collection__button-{{ ai_gen_id }}">
                  {{ block.settings.button_text }}
                </a>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>

      {% if block.settings.show_view_all %}
        <div class="ai-neo-collection__view-all-{{ ai_gen_id }}">
          <a href="{{ block.settings.collection.url }}" class="ai-neo-collection__view-all-button-{{ ai_gen_id }}">
            {{ block.settings.view_all_text }}
          </a>
        </div>
      {% endif %}
    {% else %}
      <div class="ai-neo-collection__grid-{{ ai_gen_id }}">
        {% for i in (1..block.settings.products_limit) %}
          <div class="ai-neo-collection__card-{{ ai_gen_id }}">
            <div class="ai-neo-collection__image-wrapper-{{ ai_gen_id }}">
              <div class="ai-neo-collection__image-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            </div>
            <div class="ai-neo-collection__content-{{ ai_gen_id }}">
              <h3 class="ai-neo-collection__product-title-{{ ai_gen_id }}">Product title</h3>
              {% if block.settings.show_price %}
                <div class="ai-neo-collection__price-{{ ai_gen_id }}">$29.99</div>
              {% endif %}
              {% if block.settings.show_button %}
                <a href="#" class="ai-neo-collection__button-{{ ai_gen_id }}">
                  {{ block.settings.button_text }}
                </a>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

