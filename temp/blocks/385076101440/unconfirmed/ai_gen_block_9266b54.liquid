    color: {{ block.settings.price_color }};
    font-weight: {{ block.settings.price_weight }};
    margin-bottom: {{ block.settings.price_spacing }}px;
  }

  .ai-neo-collection__price-compare-{{ ai_gen_id }} {
    text-decoration: line-through;
    opacity: 0.6;
    margin-left: 8px;
  }

  .ai-neo-collection__button-{{ ai_gen_id }} {
    display: inline-block;
    width: 100%;
    padding: {{ block.settings.button_padding_y }}px {{ block.settings.button_padding_x }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    text-align: center;
    text-decoration: none;
    text-transform: {{ block.settings.button_text_transform }};
    cursor: pointer;
    transition: all 0.2s ease;
    box-shadow: {{ block.settings.button_shadow_x }}px {{ block.settings.button_shadow_y }}px 0px {{ block.settings.button_shadow_color }};
  }

  .ai-neo-collection__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translate({{ block.settings.button_hover_translate_x }}px, {{ block.settings.button_hover_translate_y }}px);
    box-shadow: {{ block.settings.button_hover_shadow_x }}px {{ block.settings.button_hover_shadow_y }}px 0px {{ block.settings.button_shadow_color }};
  }

  .ai-neo-collection__view-all-{{ ai_gen_id }} {
    margin-top: {{ block.settings.view_all_spacing }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-neo-collection__view-all-button-{{ ai_gen_id }} {
