{% doc %}
  @prompt
    Create a swipeable product grid under the section title, featuring rounded white cards, bold discount and new badges, centered product images, and cart icons in every product image left bottom alligment. Include category labels, clear product titles, sale prices with strikethrough originals, and clean spacing. Use a minimal, modern aesthetic with soft shadows and smooth swipe interaction.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-swipe-grid-{{ ai_gen_id }} {
    padding: 40px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-swipe-grid__container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-swipe-grid__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-swipe-grid__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0;
    font-weight: 700;
  }

  .ai-swipe-grid__wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    margin: 0 -10px;
  }

  .ai-swipe-grid__track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_gap }}px;
    padding: 0 10px 20px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -webkit-overflow-scrolling: touch;
    cursor: grab;
  }

  .ai-swipe-grid__track-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-swipe-grid__track-{{ ai_gen_id }}.is-dragging {
    cursor: grabbing;
    scroll-behavior: auto;
  }

  .ai-swipe-grid__card-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.card_width }}px;
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_radius }}px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    overflow: hidden;
  }

  .ai-swipe-grid__card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
  }

  .ai-swipe-grid__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-top: 100%;
    overflow: hidden;
    background-color: #f9f9f9;
  }

  .ai-swipe-grid__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-swipe-grid__badges-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    right: 12px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    z-index: 2;
  }

  .ai-swipe-grid__badge-{{ ai_gen_id }} {
    padding: 6px 12px;
    border-radius: {{ block.settings.badge_radius }}px;
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    text-align: center;
    min-width: 60px;
  }

  .ai-swipe-grid__badge--discount-{{ ai_gen_id }} {
    background-color: {{ block.settings.discount_badge_color }};
    color: {{ block.settings.discount_badge_text }};
  }

  .ai-swipe-grid__badge--new-{{ ai_gen_id }} {
    background-color: {{ block.settings.new_badge_color }};
    color: {{ block.settings.new_badge_text }};
  }

  .ai-swipe-grid__cart-icon-{{ ai_gen_id }} {
    position: absolute;
    bottom: 12px;
    left: 12px;
    width: 40px;
    height: 40px;
    background-color: {{ block.settings.cart_icon_bg }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: transform 0.2s ease, background-color 0.2s ease;
    z-index: 2;
  }

  .ai-swipe-grid__cart-icon-{{ ai_gen_id }}:hover {
    transform: scale(1.1);
    background-color: {{ block.settings.cart_icon_hover_bg }};
  }

  .ai-swipe-grid__cart-icon-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
    stroke: {{ block.settings.cart_icon_color }};
  }

  .ai-swipe-grid__content-{{ ai_gen_id }} {
    padding: 20px;
    text-align: center;
  }

  .ai-swipe-grid__category-{{ ai_gen_id }} {
    font-size: 12px;
    color: {{ block.settings.category_color }};
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 8px;
    font-weight: 600;
  }

  .ai-swipe-grid__product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 12px;
    font-weight: 600;
    line-height: 1.4;
    min-height: 44px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .ai-swipe-grid__price-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  .ai-swipe-grid__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.sale_price_color }};
    font-weight: 700;
  }

  .ai-swipe-grid__compare-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size | minus: 2 }}px;
    color: {{ block.settings.original_price_color }};
    text-decoration: line-through;
    opacity: 0.7;
  }

  .ai-swipe-grid__empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #999;
  }

  .ai-swipe-grid__empty-text-{{ ai_gen_id }} {
    font-size: 16px;
    margin-top: 20px;
  }

  @media screen and (max-width: 768px) {
    .ai-swipe-grid__card-{{ ai_gen_id }} {
      flex: 0 0 {{ block.settings.card_width | times: 0.8 }}px;
    }

    .ai-swipe-grid__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<swipeable-product-grid-{{ ai_gen_id }}
  class="ai-swipe-grid-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-swipe-grid__container-{{ ai_gen_id }}">
    {% if block.settings.section_title != blank %}
      <div class="ai-swipe-grid__header-{{ ai_gen_id }}">
        <h2 class="ai-swipe-grid__title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
      </div>
    {% endif %}

    <div class="ai-swipe-grid__wrapper-{{ ai_gen_id }}">
      {% if block.settings.product_list != blank %}
        <div class="ai-swipe-grid__track-{{ ai_gen_id }}" data-track>
          {% for product in block.settings.product_list %}
            <div class="ai-swipe-grid__card-{{ ai_gen_id }}">
              <div class="ai-swipe-grid__image-wrapper-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-swipe-grid__image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                {% else %}
                  <div class="ai-swipe-grid__image-placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}

                <div class="ai-swipe-grid__badges-{{ ai_gen_id }}">
                  {% if product.compare_at_price > product.price %}
                    {% assign discount_percentage = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price %}
                    <div class="ai-swipe-grid__badge-{{ ai_gen_id }} ai-swipe-grid__badge--discount-{{ ai_gen_id }}">
                      -{{ discount_percentage }}%
                    </div>
                  {% endif %}

                  {% if block.settings.show_new_badge %}
                    {% assign days_since_published = 'now' | date: '%s' | minus: product.published_at | date: '%s' | divided_by: 86400 %}
                    {% if days_since_published <= block.settings.new_badge_days %}
                      <div class="ai-swipe-grid__badge-{{ ai_gen_id }} ai-swipe-grid__badge--new-{{ ai_gen_id }}">
                        New
                      </div>
                    {% endif %}
                  {% endif %}
                </div>

                <button
                  class="ai-swipe-grid__cart-icon-{{ ai_gen_id }}"
                  aria-label="Add {{ product.title }} to cart"
                  data-product-id="{{ product.id }}"
                  data-variant-id="{{ product.selected_or_first_available_variant.id }}"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5V6a3.75 3.75 0 10-7.5 0v4.5m11.356-1.993l1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 01-1.12-1.243l1.264-12A1.125 1.125 0 015.513 7.5h12.974c.576 0 1.059.435 1.119 1.007zM8.625 10.5a.375.375 0 11-.75 0 .375.375 0 01.75 0zm7.5 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
                  </svg>
                </button>
              </div>

              <div class="ai-swipe-grid__content-{{ ai_gen_id }}">
                {% if product.type != blank %}
                  <div class="ai-swipe-grid__category-{{ ai_gen_id }}">{{ product.type }}</div>
                {% endif %}

                <h3 class="ai-swipe-grid__product-title-{{ ai_gen_id }}">
                  <a href="{{ product.url }}" style="color: inherit; text-decoration: none;">
                    {{ product.title }}
                  </a>
                </h3>

                <div class="ai-swipe-grid__price-wrapper-{{ ai_gen_id }}">
                  <span class="ai-swipe-grid__price-{{ ai_gen_id }}">
                    {{ product.price | money }}
                  </span>
                  {% if product.compare_at_price > product.price %}
                    <span class="ai-swipe-grid__compare-price-{{ ai_gen_id }}">
                      {{ product.compare_at_price | money }}
                    </span>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      {% else %}
        <div class="ai-swipe-grid__empty-{{ ai_gen_id }}">
          {{ 'product-1' | placeholder_svg_tag }}
          <p class="ai-swipe-grid__empty-text-{{ ai_gen_id }}">
            Add products to display in this swipeable grid
          </p>
        </div>
      {% endif %}
    </div>
  </div>
</swipeable-product-grid-{{ ai_gen_id }}>

<script>
  (function() {
    class SwipeableProductGrid{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.track = this.querySelector('[data-track]');
        this.isDragging = false;
        this.startX = 0;
        this.scrollLeft = 0;
      }

      connectedCallback() {
        if (!this.track) return;

        this.track.addEventListener('mousedown', this.handleMouseDown.bind(this));
        this.track.addEventListener('mousemove', this.handleMouseMove.bind(this));
        this.track.addEventListener('mouseup', this.handleMouseUp.bind(this));
        this.track.addEventListener('mouseleave', this.handleMouseUp.bind(this));

        this.track.addEventListener('touchstart', this.handleTouchStart.bind(this), { passive: true });
        this.track.addEventListener('touchmove', this.handleTouchMove.bind(this), { passive: true });
        this.track.addEventListener('touchend', this.handleTouchEnd.bind(this));

        this.querySelectorAll('.ai-swipe-grid__cart-icon-{{ ai_gen_id }}').forEach(button => {
          button.addEventListener('click', this.handleAddToCart.bind(this));
        });
      }

      handleMouseDown(e) {
        this.isDragging = true;
        this.track.classList.add('is-dragging');
        this.startX = e.pageX - this.track.offsetLeft;
        this.scrollLeft = this.track.scrollLeft;
      }

      handleMouseMove(e) {
        if (!this.isDragging) return;
        e.preventDefault();
        const x = e.pageX - this.track.offsetLeft;
        const walk = (x - this.startX) * 2;
        this.track.scrollLeft = this.scrollLeft - walk;
      }

      handleMouseUp() {
        this.isDragging = false;
        this.track.classList.remove('is-dragging');
      }

      handleTouchStart(e) {
        this.startX = e.touches[0].pageX - this.track.offsetLeft;
        this.scrollLeft = this.track.scrollLeft;
      }

      handleTouchMove(e) {
        const x = e.touches[0].pageX - this.track.offsetLeft;
        const walk = (x - this.startX) * 2;
        this.track.scrollLeft = this.scrollLeft - walk;
      }

      handleTouchEnd() {
        this.isDragging = false;
      }

      handleAddToCart(e) {
        e.preventDefault();
        const button = e.currentTarget;
        const variantId = button.dataset.variantId;

        if (!variantId) return;

        const formData = {
          items: [{
            id: variantId,
            quantity: 1
          }]
        };

        fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(formData)
        })
        .then(response => response.json())
        .then(data => {
          window.dispatchEvent(new CustomEvent('cart:refresh'));
          button.style.transform = 'scale(1.2)';
          setTimeout(() => {
            button.style.transform = '';
          }, 200);
        })
        .catch(error => {
          console.error('Error adding to cart:', error);
        });
      }
    }

    customElements.define('swipeable-product-grid-{{ ai_gen_id }}', SwipeableProductGrid{{ ai_gen_id }});
  })();
</script>

