    color: {{ block.settings.product_title_color }};
    margin: 0 0 12px;
    font-weight: {{ block.settings.product_title_weight }};
    line-height: 1.4;
    min-height: 44px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    {% if block.settings.product_title_font != blank %}
      font-family: {{ block.settings.product_title_font.family }}, {{ block.settings.product_title_font.fallback_families }};
      font-weight: {{ block.settings.product_title_font.weight }};
      font-style: {{ block.settings.product_title_font.style }};
    {% endif %}
  }

  .ai-swipe-grid__price-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  .ai-swipe-grid__price-{{ ai_gen_id }} {
