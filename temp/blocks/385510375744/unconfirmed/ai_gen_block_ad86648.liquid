{% doc %}
  @prompt
    Create a swipeable product grid under the section title, featuring rounded white cards, bold discount and new badges, centered product images, and cart icons in every product image left bottom alligment. Include category labels, clear product titles, sale prices with strikethrough originals, and clean spacing. Use a minimal, modern aesthetic with soft shadows and smooth swipe interaction., in mobile version there should be two product per row and i desktop version there should be 4 product per row also title font and all should be customizable
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-swipe-grid-{{ ai_gen_id }} {
    padding: 40px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-swipe-grid__container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-swipe-grid__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.title_alignment }};
    margin-bottom: 40px;
  }

  .ai-swipe-grid__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0;
    font-weight: {{ block.settings.title_weight }};
    {% if block.settings.title_font != blank %}
      font-family: {{ block.settings.title_font.family }}, {{ block.settings.title_font.fallback_families }};
      font-weight: {{ block.settings.title_font.weight }};
      font-style: {{ block.settings.title_font.style }};
    {% endif %}
  }

  .ai-swipe-grid__wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
  }

  .ai-swipe-grid__track-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.desktop_columns }}, 1fr);
    gap: {{ block.settings.card_gap }}px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -webkit-overflow-scrolling: touch;
  }

  .ai-swipe-grid__track-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-swipe-grid__card-{{ ai_gen_id }} {
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_radius }}px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    overflow: hidden;
  }

  .ai-swipe-grid__card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
  }

  .ai-swipe-grid__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-top: 100%;
    overflow: hidden;
    background-color: #f9f9f9;
  }

  .ai-swipe-grid__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-swipe-grid__image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-swipe-grid__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-swipe-grid__badges-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    right: 12px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    z-index: 2;
  }

  .ai-swipe-grid__badge-{{ ai_gen_id }} {
    padding: {{ block.settings.badge_padding_vertical }}px {{ block.settings.badge_padding_horizontal }}px;
    border-radius: {{ block.settings.badge_radius }}px;
    font-size: {{ block.settings.badge_font_size }}px;
    font-weight: {{ block.settings.badge_font_weight }};
    text-transform: uppercase;
    letter-spacing: 0.5px;
    text-align: center;
    min-width: 60px;
  }

  .ai-swipe-grid__badge--discount-{{ ai_gen_id }} {
    background-color: {{ block.settings.discount_badge_color }};
    color: {{ block.settings.discount_badge_text }};
  }

  .ai-swipe-grid__badge--new-{{ ai_gen_id }} {
    background-color: {{ block.settings.new_badge_color }};
    color: {{ block.settings.new_badge_text }};
  }

  .ai-swipe-grid__cart-icon-{{ ai_gen_id }} {
    position: absolute;
    bottom: 12px;
    left: 12px;
    width: {{ block.settings.cart_icon_size }}px;
    height: {{ block.settings.cart_icon_size }}px;
    background-color: {{ block.settings.cart_icon_bg }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: transform 0.2s ease, background-color 0.2s ease;
    z-index: 2;
    border: none;
  }

  .ai-swipe-grid__cart-icon-{{ ai_gen_id }}:hover {
    transform: scale(1.1);
    background-color: {{ block.settings.cart_icon_hover_bg }};
  }

  .ai-swipe-grid__cart-icon-{{ ai_gen_id }} svg {
    width: {{ block.settings.cart_icon_size | times: 0.5 }}px;
    height: {{ block.settings.cart_icon_size | times: 0.5 }}px;
    stroke: {{ block.settings.cart_icon_color }};
  }

  .ai-swipe-grid__cart-icon-{{ ai_gen_id }}:hover svg {
    stroke: {{ block.settings.cart_icon_hover_color }};
  }

  .ai-swipe-grid__content-{{ ai_gen_id }} {
