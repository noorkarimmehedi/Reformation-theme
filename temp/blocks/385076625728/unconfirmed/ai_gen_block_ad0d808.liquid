{% doc %}
  @prompt
    build me a neobrutalism style featured collection section for me where everything should be customizable from font to color to shadow everything, in mobile version there should be two product in one row
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-neobrutalism-collection-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_mobile }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  @media screen and (min-width: 750px) {
    .ai-neobrutalism-collection-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_desktop }}px 40px;
    }
  }

  .ai-neobrutalism-collection__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-neobrutalism-collection__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
  }

  .ai-neobrutalism-collection__title-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-size: {{ block.settings.heading_size_mobile }}px;
    color: {{ block.settings.heading_color }};
    margin: 0;
    text-transform: {% if block.settings.heading_uppercase %}uppercase{% else %}none{% endif %};
    letter-spacing: {{ block.settings.heading_letter_spacing }}px;
  }

  @media screen and (min-width: 750px) {
    .ai-neobrutalism-collection__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_desktop }}px;
    }
  }

  .ai-neobrutalism-collection__description-{{ ai_gen_id }} {
    font-family: {{ block.settings.body_font.family }}, {{ block.settings.body_font.fallback_families }};
    font-weight: {{ block.settings.body_font.weight }};
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin-top: 16px;
  }

  .ai-neobrutalism-collection__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: {{ block.settings.grid_gap_mobile }}px;
    margin-top: {{ block.settings.grid_spacing }}px;
  }

  @media screen and (min-width: 750px) {
    .ai-neobrutalism-collection__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
      gap: {{ block.settings.grid_gap_desktop }}px;
    }
  }

  .ai-neobrutalism-collection__card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    box-shadow: {{ block.settings.card_shadow_x }}px {{ block.settings.card_shadow_y }}px 0px {{ block.settings.card_shadow_color }};
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    overflow: hidden;
  }

  .ai-neobrutalism-collection__card-{{ ai_gen_id }}:hover {
    transform: translate({{ block.settings.card_hover_translate_x }}px, {{ block.settings.card_hover_translate_y }}px);
    box-shadow: {{ block.settings.card_hover_shadow_x }}px {{ block.settings.card_hover_shadow_y }}px 0px {{ block.settings.card_shadow_color }};
  }

  .ai-neobrutalism-collection__card-link-{{ ai_gen_id }} {
    text-decoration: none;
    display: block;
  }

  .ai-neobrutalism-collection__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.image_background }};
  }

  .ai-neobrutalism-collection__image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-neobrutalism-collection__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    background-color: {{ block.settings.image_background }};
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-neobrutalism-collection__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-neobrutalism-collection__content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
    text-align: {{ block.settings.card_text_alignment }};
  }

  .ai-neobrutalism-collection__product-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.product_title_font.family }}, {{ block.settings.product_title_font.fallback_families }};
    font-weight: {{ block.settings.product_title_font.weight }};
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 8px 0;
    text-transform: {% if block.settings.product_title_uppercase %}uppercase{% else %}none{% endif %};
    letter-spacing: {{ block.settings.product_title_letter_spacing }}px;
  }

  .ai-neobrutalism-collection__product-price-{{ ai_gen_id }} {
    font-family: {{ block.settings.body_font.family }}, {{ block.settings.body_font.fallback_families }};
    font-weight: {{ block.settings.body_font.weight }};
    font-size: {{ block.settings.product_price_size }}px;
    color: {{ block.settings.product_price_color }};
    font-weight: bold;
  }

  .ai-neobrutalism-collection__button-wrapper-{{ ai_gen_id }} {
    text-align: {{ block.settings.button_alignment }};
    margin-top: {{ block.settings.button_spacing }}px;
  }

  .ai-neobrutalism-collection__button-{{ ai_gen_id }} {
    display: inline-block;
    font-family: {{ block.settings.button_font.family }}, {{ block.settings.button_font.fallback_families }};
    font-weight: {{ block.settings.button_font.weight }};
    font-size: {{ block.settings.button_font_size }}px;
    color: {{ block.settings.button_text_color }};
    background-color: {{ block.settings.button_background }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    text-decoration: none;
    text-transform: {% if block.settings.button_uppercase %}uppercase{% else %}none{% endif %};
    letter-spacing: {{ block.settings.button_letter_spacing }}px;
    box-shadow: {{ block.settings.button_shadow_x }}px {{ block.settings.button_shadow_y }}px 0px {{ block.settings.button_shadow_color }};
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    cursor: pointer;
  }

  .ai-neobrutalism-collection__button-{{ ai_gen_id }}:hover {
    transform: translate({{ block.settings.button_hover_translate_x }}px, {{ block.settings.button_hover_translate_y }}px);
    box-shadow: {{ block.settings.button_hover_shadow_x }}px {{ block.settings.button_hover_shadow_y }}px 0px {{ block.settings.button_shadow_color }};
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
  }

  .ai-neobrutalism-collection__empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    font-family: {{ block.settings.body_font.family }}, {{ block.settings.body_font.fallback_families }};
    font-size: 16px;
    color: {{ block.settings.description_color }};
  }
{% endstyle %}

<div class="ai-neobrutalism-collection-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-neobrutalism-collection__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.description != blank %}
      <div class="ai-neobrutalism-collection__header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-neobrutalism-collection__title-{{ ai_gen_id }}">
            {{ block.settings.heading }}
          </h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-neobrutalism-collection__description-{{ ai_gen_id }}">
            {{ block.settings.description }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.collection != blank %}
      {% assign collection = block.settings.collection %}
      {% if collection.products.size > 0 %}
        <div class="ai-neobrutalism-collection__grid-{{ ai_gen_id }}">
          {% for product in collection.products limit: block.settings.products_to_show %}
            <div class="ai-neobrutalism-collection__card-{{ ai_gen_id }}">
              <a href="{{ product.url }}" class="ai-neobrutalism-collection__card-link-{{ ai_gen_id }}">
                <div class="ai-neobrutalism-collection__image-wrapper-{{ ai_gen_id }}">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image | image_url: width: 800 }}"
                      alt="{{ product.featured_image.alt | escape }}"
                      loading="lazy"
                      width="{{ product.featured_image.width }}"
                      height="{{ product.featured_image.height }}"
                    >
                  {% else %}
                    <div class="ai-neobrutalism-collection__image-placeholder-{{ ai_gen_id }}">
                      {{ 'product-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </div>
                <div class="ai-neobrutalism-collection__content-{{ ai_gen_id }}">
                  <h3 class="ai-neobrutalism-collection__product-title-{{ ai_gen_id }}">
                    {{ product.title }}
                  </h3>
                  <div class="ai-neobrutalism-collection__product-price-{{ ai_gen_id }}">
                    {{ product.price | money }}
                  </div>
                </div>
              </a>
            </div>
          {% endfor %}
        </div>

        {% if block.settings.show_view_all %}
          <div class="ai-neobrutalism-collection__button-wrapper-{{ ai_gen_id }}">
            <a href="{{ collection.url }}" class="ai-neobrutalism-collection__button-{{ ai_gen_id }}">
              {{ block.settings.button_text }}
            </a>
          </div>
        {% endif %}
      {% else %}
        <div class="ai-neobrutalism-collection__empty-{{ ai_gen_id }}">
          This collection is empty. Add products to display them here.
        </div>
      {% endif %}
    {% else %}
      <div class="ai-neobrutalism-collection__empty-{{ ai_gen_id }}">
        Select a collection to display products
      </div>
    {% endif %}
  </div>
</div>

