<div class="ai-best-sellers-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-best-sellers-header-{{ ai_gen_id }}">
    <h2 class="ai-best-sellers-title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
    {% if block.settings.button_link != blank %}
      <a href="{{ block.settings.button_link }}" class="ai-best-sellers-button-{{ ai_gen_id }}">
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>

  {% if block.settings.collection != blank %}
    <div class="ai-best-sellers-grid-{{ ai_gen_id }}">
      {% for product in block.settings.collection.products limit: block.settings.products_limit %}
        <div class="ai-product-card-{{ ai_gen_id }}">
          <div class="ai-product-image-wrapper-{{ ai_gen_id }}">
            <div class="ai-product-image-container-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 800 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-product-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="{{ product.featured_image.width }}"
                  height="{{ product.featured_image.height }}"
                >
              {% else %}
                <div class="ai-product-image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            <div class="ai-product-info-{{ ai_gen_id }}">
              <h3 class="ai-product-title-{{ ai_gen_id }}">
                <a href="{{ product.url }}" class="ai-product-title-link-{{ ai_gen_id }}">
                  {{ product.title }}
                </a>
              </h3>

              <div class="ai-product-price-{{ ai_gen_id }}">
                {{ product.price | money }}
                {% if product.compare_at_price > product.price %}
                  <span class="ai-product-price-compare-{{ ai_gen_id }}">
                    {{ product.compare_at_price | money }}
                  </span>
                {% endif %}
              </div>

              {% if block.settings.show_add_to_cart %}
                <button
                  class="ai-add-to-cart-{{ ai_gen_id }}"
                  data-product-id="{{ product.id }}"
                  data-variant-id="{{ product.selected_or_first_available_variant.id }}"
                  {% unless product.available %}disabled{% endunless %}
                >
                  {% if product.available %}
                    {{ block.settings.cart_button_text }}
                  {% else %}
                    {{ block.settings.sold_out_text }}
                  {% endif %}
                </button>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <div class="ai-empty-state-{{ ai_gen_id }}">
      Select a collection to display products
    </div>
  {% endif %}
</div>

{% if block.settings.show_add_to_cart %}
  <script>
    (function() {
      class BestSellers{{ ai_gen_id }} extends HTMLElement {
        constructor() {
          super();
        }

        connectedCallback() {
          this.buttons = this.querySelectorAll('.ai-add-to-cart-{{ ai_gen_id }}');
          this.setupEventListeners();
        }

        setupEventListeners() {
          this.buttons.forEach((button) => {
            button.addEventListener('click', this.handleAddToCart.bind(this));
          });
        }

        async handleAddToCart(event) {
          const button = event.target;
          const variantId = button.dataset.variantId;
          const originalText = button.textContent;

          button.disabled = true;
          button.textContent = '{{ block.settings.adding_text }}';

          try {
            const response = await fetch('/cart/add.js', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify({
                id: variantId,
                quantity: 1
              })
            });

            if (response.ok) {
              button.textContent = '{{ block.settings.added_text }}';
              
              setTimeout(() => {
                button.textContent = originalText;
                button.disabled = false;
              }, 2000);

              document.dispatchEvent(new CustomEvent('cart:refresh'));
              
              if (window.theme && window.theme.cart) {
                window.theme.cart.refresh();
              }
            } else {
              throw new Error('Failed to add to cart');
            }
          } catch (error) {
            button.textContent = originalText;
            button.disabled = false;
            console.error('Error adding to cart:', error);
          }
        }
      }

      customElements.define('best-sellers-{{ ai_gen_id }}', BestSellers{{ ai_gen_id }});
      
      const container = document.querySelector('.ai-best-sellers-{{ ai_gen_id }}');
      if (container && !customElements.get('best-sellers-{{ ai_gen_id }}-wrapper')) {
        const wrapper = document.createElement('best-sellers-{{ ai_gen_id }}');
        container.parentNode.insertBefore(wrapper, container);
        wrapper.appendChild(container);
      }
    })();
  </script>
{% endif %}

