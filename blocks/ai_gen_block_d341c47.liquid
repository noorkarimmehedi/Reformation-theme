{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-info-table-{{ ai_gen_id }} {
    background-color: {{ block.settings.outer_background_color }};
    padding: 20px;
  }

  .ai-product-info-table__wrapper-{{ ai_gen_id }} {
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    background-color: {{ block.settings.inner_background_color }};
  }

  .ai-product-info-table__row-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: {{ block.settings.left_column_width }}% 1fr;
    min-height: 60px;
  }

  .ai-product-info-table__label-{{ ai_gen_id }} {
    padding: 20px;
    background-color: {{ block.settings.label_background_color }};
    color: {{ block.settings.label_text_color }};
    font-size: {{ block.settings.label_font_size }}px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    display: flex;
    align-items: center;
  }

  .ai-product-info-table__content-{{ ai_gen_id }} {
    padding: 20px;
    background-color: {{ block.settings.content_background_color }};
    color: {{ block.settings.content_text_color }};
    font-size: {{ block.settings.content_font_size }}px;
    line-height: 1.6;
    display: flex;
    align-items: center;
  }

  .ai-product-info-table__content-{{ ai_gen_id }} p {
    margin: 0;
  }

  .ai-product-info-table__content-{{ ai_gen_id }} ul,
  .ai-product-info-table__content-{{ ai_gen_id }} ol {
    margin: 0;
    padding-left: 20px;
  }

  .ai-product-info-table__content-{{ ai_gen_id }} li {
    margin-bottom: 8px;
  }

  .ai-product-info-table__content-{{ ai_gen_id }} li:last-child {
    margin-bottom: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-product-info-table-{{ ai_gen_id }} {
      padding: 20px 15px;
    }

    .ai-product-info-table__row-{{ ai_gen_id }} {
      grid-template-columns: 1fr 1fr;
    }

    .ai-product-info-table__label-{{ ai_gen_id }} {
      padding: 15px;
      font-size: {{ block.settings.label_font_size | times: 0.9 }}px;
    }

    .ai-product-info-table__content-{{ ai_gen_id }} {
      padding: 15px;
      font-size: {{ block.settings.content_font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-product-info-table-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-info-table__wrapper-{{ ai_gen_id }}">
    {% if block.settings.show_description %}
      <div class="ai-product-info-table__row-{{ ai_gen_id }}">
        <div class="ai-product-info-table__label-{{ ai_gen_id }}">
          {{ block.settings.description_label }}
        </div>
        <div class="ai-product-info-table__content-{{ ai_gen_id }}">
          {{ block.settings.description_content }}
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_details %}
      <div class="ai-product-info-table__row-{{ ai_gen_id }}">
        <div class="ai-product-info-table__label-{{ ai_gen_id }}">
          {{ block.settings.details_label }}
        </div>
        <div class="ai-product-info-table__content-{{ ai_gen_id }}">
          {{ block.settings.details_content }}
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_wash_care %}
      <div class="ai-product-info-table__row-{{ ai_gen_id }}">
        <div class="ai-product-info-table__label-{{ ai_gen_id }}">
          {{ block.settings.wash_care_label }}
        </div>
        <div class="ai-product-info-table__content-{{ ai_gen_id }}">
          {{ block.settings.wash_care_content }}
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_shipping %}
      <div class="ai-product-info-table__row-{{ ai_gen_id }}">
        <div class="ai-product-info-table__label-{{ ai_gen_id }}">
          {{ block.settings.shipping_label }}
        </div>
        <div class="ai-product-info-table__content-{{ ai_gen_id }}">
          {{ block.settings.shipping_content }}
        </div>
      </div>
    {% endif %}
  </div>
</div>

