{% doc %}
  @prompt
    Design a minimal, high-end e-commerce clothing section titled 'YOU MAY ALSO LIKE'. Use a light grey background and place the section title in small, uppercase sans-serif text at the top-left. Add a clean rectangular button labeled 'DISCOVER MORE' at the top-right for navigation.
    
    Below, create a 2x2 grid layout displaying four product cards. 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-you-may-like-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
  }

  .ai-you-may-like-header-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: {{ block.settings.header_spacing }}px;
    max-width: {{ block.settings.max_width }}px;
    margin-left: auto;
    margin-right: auto;
  }

  .ai-you-may-like-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.title_font.family }}, {{ block.settings.title_font.fallback_families }};
    font-weight: {{ block.settings.title_font.weight }};
    font-size: {{ block.settings.title_size }}px;
    letter-spacing: {{ block.settings.title_letter_spacing }}px;
    text-transform: uppercase;
    color: {{ block.settings.title_color }};
    margin: 0;
  }

  .ai-you-may-like-button-{{ ai_gen_id }} {
    font-family: {{ block.settings.button_font.family }}, {{ block.settings.button_font.fallback_families }};
    font-weight: {{ block.settings.button_font.weight }};
    font-size: {{ block.settings.button_size }}px;
    letter-spacing: {{ block.settings.button_letter_spacing }}px;
    text-transform: uppercase;
    color: {{ block.settings.button_text_color }};
    background-color: {{ block.settings.button_bg_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .ai-you-may-like-button-{{ ai_gen_id }}:hover {
    color: {{ block.settings.button_hover_text_color }};
    background-color: {{ block.settings.button_hover_bg_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-you-may-like-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    max-width: {{ block.settings.max_width }}px;
    margin-left: auto;
    margin-right: auto;
  }

  .ai-you-may-like-card-{{ ai_gen_id }} {
    position: relative;
    background-color: {{ block.settings.card_bg_color }};
  }

  .ai-you-may-like-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    background-color: #f9f9f9;
  }

  .ai-you-may-like-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .ai-you-may-like-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 3 / 4;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-you-may-like-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-you-may-like-content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px 0 0;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-you-may-like-product-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.product_title_font.family }}, {{ block.settings.product_title_font.fallback_families }};
    font-weight: {{ block.settings.product_title_font.weight }};
    font-size: {{ block.settings.product_title_size }}px;
    letter-spacing: {{ block.settings.product_title_letter_spacing }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 {{ block.settings.title_price_spacing }}px;
    line-height: 1.3;
  }

  .ai-you-may-like-product-price-{{ ai_gen_id }} {
    font-family: {{ block.settings.product_price_font.family }}, {{ block.settings.product_price_font.fallback_families }};
    font-weight: {{ block.settings.product_price_font.weight }};
    font-size: {{ block.settings.product_price_size }}px;
    letter-spacing: {{ block.settings.product_price_letter_spacing }}px;
    color: {{ block.settings.product_price_color }};
  }

  .ai-you-may-like-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: #999;
    font-size: 14px;
  }

  @media screen and (max-width: 749px) {
    .ai-you-may-like-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.6 }}px {{ block.settings.padding_horizontal | times: 0.6 }}px {{ block.settings.padding_bottom | times: 0.6 }}px;
    }

    .ai-you-may-like-header-{{ ai_gen_id }} {
      margin-bottom: {{ block.settings.header_spacing | times: 0.7 }}px;
    }

    .ai-you-may-like-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-you-may-like-button-{{ ai_gen_id }} {
      font-size: {{ block.settings.button_size | times: 0.85 }}px;
      padding: {{ block.settings.button_padding_vertical | times: 0.8 }}px {{ block.settings.button_padding_horizontal | times: 0.8 }}px;
    }

    .ai-you-may-like-grid-{{ ai_gen_id }} {
      gap: {{ block.settings.grid_gap | times: 0.6 }}px;
    }

    .ai-you-may-like-product-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.product_title_size | times: 0.9 }}px;
    }

    .ai-you-may-like-product-price-{{ ai_gen_id }} {
      font-size: {{ block.settings.product_price_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-you-may-like-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-you-may-like-header-{{ ai_gen_id }}">
    <h2 class="ai-you-may-like-title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
    {% if block.settings.button_link != blank %}
      <a href="{{ block.settings.button_link }}" class="ai-you-may-like-button-{{ ai_gen_id }}">
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>

  {% if block.settings.product_1 != blank or block.settings.product_2 != blank or block.settings.product_3 != blank or block.settings.product_4 != blank %}
    <div class="ai-you-may-like-grid-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% assign product_key = 'product_' | append: i %}
        {% assign product = block.settings[product_key] %}
        
        <div class="ai-you-may-like-card-{{ ai_gen_id }}">
          <div class="ai-you-may-like-image-wrapper-{{ ai_gen_id }}">
            {% if product != blank %}
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 800 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-you-may-like-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="{{ product.featured_image.width }}"
                  height="{{ product.featured_image.height }}"
                >
              {% else %}
                <div class="ai-you-may-like-image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-apparel-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            {% else %}
              <div class="ai-you-may-like-image-placeholder-{{ ai_gen_id }}">
                {{ 'product-apparel-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>

          <div class="ai-you-may-like-content-{{ ai_gen_id }}">
            {% if product != blank %}
              <h3 class="ai-you-may-like-product-title-{{ ai_gen_id }}">
                {{ product.title }}
              </h3>
              <div class="ai-you-may-like-product-price-{{ ai_gen_id }}">
                {{ product.price | money }}
              </div>
            {% else %}
              <h3 class="ai-you-may-like-product-title-{{ ai_gen_id }}">
                Product Title
              </h3>
              <div class="ai-you-may-like-product-price-{{ ai_gen_id }}">
                $0.00
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <div class="ai-you-may-like-empty-state-{{ ai_gen_id }}">
      Next, add products to display in the grid
    </div>
  {% endif %}
</div>

