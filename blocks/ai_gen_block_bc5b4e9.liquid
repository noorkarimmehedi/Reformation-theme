    opacity: 0.4;
    cursor: not-allowed;
    transform: none;
  }

  .ai-add-to-cart-{{ ai_gen_id }}:disabled:hover {
    transform: none;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

