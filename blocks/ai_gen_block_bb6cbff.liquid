{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-luxury-footer-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
  }

  .ai-luxury-footer__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-luxury-footer__top-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding-bottom: {{ block.settings.section_spacing }}px;
    border-bottom: 1px solid {{ block.settings.border_color }};
    gap: 40px;
  }

  .ai-luxury-footer__logo-section-{{ ai_gen_id }} {
    flex: 0 0 auto;
    max-width: 400px;
  }

  .ai-luxury-footer__logo-{{ ai_gen_id }} {
    margin-bottom: 20px;
    text-align: {{ block.settings.logo_alignment }};
  }

  .ai-luxury-footer__logo-{{ ai_gen_id }} img {
    max-width: {{ block.settings.logo_width }}px;
    height: auto;
  }

  .ai-luxury-footer__tagline-{{ ai_gen_id }} {
    font-size: {{ block.settings.tagline_size }}px;
    line-height: 1.6;
    letter-spacing: 0.5px;
    opacity: 0.8;
    margin-bottom: 20px;
    text-align: {{ block.settings.tagline_alignment }};
  }

  .ai-luxury-footer__about-{{ ai_gen_id }} {
    font-size: {{ block.settings.about_size }}px;
    line-height: 1.7;
    letter-spacing: 0.3px;
    opacity: 0.7;
    text-align: {{ block.settings.about_alignment }};
  }

  .ai-luxury-footer__nav-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.nav_gap }}px;
    flex: 1;
    justify-content: flex-end;
  }

  .ai-luxury-footer__nav-column-{{ ai_gen_id }} {
    min-width: 150px;
  }

  .ai-luxury-footer__nav-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.nav_title_size }}px;
    font-weight: 400;
    letter-spacing: 2px;
    text-transform: uppercase;
    margin-bottom: 20px;
  }

  .ai-luxury-footer__nav-list-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .ai-luxury-footer__nav-item-{{ ai_gen_id }} {
    margin-bottom: 12px;
  }

  .ai-luxury-footer__nav-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-size: {{ block.settings.link_size }}px;
    letter-spacing: 0.5px;
    transition: opacity 0.3s ease;
    opacity: 0.7;
  }

  .ai-luxury-footer__nav-link-{{ ai_gen_id }}:hover {
    opacity: 1;
  }

  .ai-luxury-footer__middle-{{ ai_gen_id }} {
    padding: {{ block.settings.section_spacing }}px 0;
    border-bottom: 1px solid {{ block.settings.border_color }};
    position: relative;
    z-index: 1;
  }

  .ai-luxury-footer__newsletter-{{ ai_gen_id }} {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .ai-luxury-footer__newsletter-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.newsletter_title_size }}px;
    font-weight: 400;
    letter-spacing: 2px;
    text-transform: uppercase;
    margin-bottom: 15px;
  }

  .ai-luxury-footer__newsletter-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.newsletter_text_size }}px;
    letter-spacing: 0.5px;
    opacity: 0.8;
    margin-bottom: 25px;
  }

  .ai-luxury-footer__newsletter-form-{{ ai_gen_id }} {
    display: flex;
    gap: 0;
    max-width: 500px;
    margin: 0 auto;
    align-items: stretch;
    height: 50px;
    position: relative;
    z-index: 1;
  }

  .ai-luxury-footer__newsletter-input-{{ ai_gen_id }} {
    flex: 1;
    padding: 12px 20px;
    background-color: transparent;
    border: 1px solid {{ block.settings.border_color }};
    border-right: none;
    color: {{ block.settings.text_color }};
    font-size: 14px;
    letter-spacing: 0.5px;
    min-width: 0;
    height: 50px;
    line-height: 1.5;
    box-sizing: border-box;
    -webkit-appearance: none;
    appearance: none;
    pointer-events: auto;
    touch-action: manipulation;
  }

  .ai-luxury-footer__newsletter-input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.text_color }} !important;
    opacity: 1 !important;
  }

  .ai-luxury-footer__newsletter-input-{{ ai_gen_id }}::-webkit-input-placeholder {
    color: {{ block.settings.text_color }} !important;
    opacity: 1 !important;
  }

  .ai-luxury-footer__newsletter-input-{{ ai_gen_id }}::-moz-placeholder {
    color: {{ block.settings.text_color }} !important;
    opacity: 1 !important;
  }

  .ai-luxury-footer__newsletter-input-{{ ai_gen_id }}:-ms-input-placeholder {
    color: {{ block.settings.text_color }} !important;
    opacity: 1 !important;
  }

  .ai-luxury-footer__newsletter-input-{{ ai_gen_id }}:focus::placeholder {
    opacity: 0.5 !important;
  }

  .ai-luxury-footer__newsletter-button-{{ ai_gen_id }} {
    padding: 0 25px;
    background-color: transparent;
    border: 1px solid {{ block.settings.border_color }};
    color: {{ block.settings.text_color }};
    font-size: 11px;
    letter-spacing: 2px;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
    flex-shrink: 0;
    height: 50px;
    line-height: 50px;
    box-sizing: border-box;
  }

  .ai-luxury-footer__newsletter-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.text_color }};
    color: {{ block.settings.background_color }};
  }

  .ai-luxury-footer__newsletter-success-{{ ai_gen_id }},
  .ai-luxury-footer__newsletter-error-{{ ai_gen_id }} {
    margin-top: 15px;
    font-size: 13px;
    letter-spacing: 0.5px;
  }

  .ai-luxury-footer__newsletter-success-{{ ai_gen_id }} {
    opacity: 0.8;
  }

  .ai-luxury-footer__newsletter-error-{{ ai_gen_id }} {
    opacity: 0.6;
  }

  .ai-luxury-footer__bottom-{{ ai_gen_id }} {
    padding-top: {{ block.settings.section_spacing }}px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 30px;
  }

  .ai-luxury-footer__social-{{ ai_gen_id }} {
    display: flex;
    gap: 20px;
  }

  .ai-luxury-footer__social-link-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    text-decoration: none;
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }

  .ai-luxury-footer__social-link-{{ ai_gen_id }}:hover {
    opacity: 1;
  }

  .ai-luxury-footer__social-icon-{{ ai_gen_id }} {
    width: {{ block.settings.social_icon_size }}px;
    height: {{ block.settings.social_icon_size }}px;
  }

  .ai-luxury-footer__copyright-{{ ai_gen_id }} {
    font-size: {{ block.settings.copyright_size }}px;
    letter-spacing: 0.5px;
    opacity: 0.6;
  }

  .ai-luxury-footer__payment-{{ ai_gen_id }} {
    display: flex;
    gap: 10px;
    opacity: 0.6;
  }

  @media screen and (max-width: 989px) {
    .ai-luxury-footer__top-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 40px;
    }

    .ai-luxury-footer__logo-section-{{ ai_gen_id }} {
      max-width: 100%;
    }

    .ai-luxury-footer__logo-{{ ai_gen_id }} {
      text-align: center;
    }

    .ai-luxury-footer__tagline-{{ ai_gen_id }} {
      text-align: center;
    }

    .ai-luxury-footer__about-{{ ai_gen_id }} {
      text-align: center;
    }

    .ai-luxury-footer__nav-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 30px;
      width: 100%;
    }

    .ai-luxury-footer__nav-column-{{ ai_gen_id }} {
      text-align: center;
    }

    .ai-luxury-footer__bottom-{{ ai_gen_id }} {
      flex-direction: column;
      text-align: center;
      gap: 20px;
    }

    .ai-luxury-footer__newsletter-form-{{ ai_gen_id }} {
      flex-direction: column;
      height: auto;
    }

    .ai-luxury-footer__newsletter-input-{{ ai_gen_id }} {
      border-right: 1px solid {{ block.settings.border_color }};
      border-bottom: none;
      height: 50px;
      padding: 14px 20px;
      font-size: 16px;
      line-height: 1.4;
      width: 100%;
      display: block;
    }

    .ai-luxury-footer__newsletter-button-{{ ai_gen_id }} {
      height: 48px;
      line-height: 48px;
      width: 100%;
      display: block;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-luxury-footer__nav-{{ ai_gen_id }} {
      gap: 25px;
    }
  }
{% endstyle %}

<footer class="ai-luxury-footer-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-luxury-footer__container-{{ ai_gen_id }}">
    <div class="ai-luxury-footer__top-{{ ai_gen_id }}">
      <div class="ai-luxury-footer__logo-section-{{ ai_gen_id }}">
        {% if block.settings.logo %}
          <div class="ai-luxury-footer__logo-{{ ai_gen_id }}">
            <img
              src="{{ block.settings.logo | image_url: width: 400 }}"
              alt="{{ shop.name }}"
              width="{{ block.settings.logo_width }}"
              height="auto"
              loading="lazy"
            >
          </div>
        {% endif %}
        {% if block.settings.tagline != blank %}
          <div class="ai-luxury-footer__tagline-{{ ai_gen_id }}">
            {{ block.settings.tagline }}
          </div>
        {% endif %}
        {% if block.settings.about_text != blank %}
          <div class="ai-luxury-footer__about-{{ ai_gen_id }}">
            {{ block.settings.about_text }}
          </div>
        {% endif %}
      </div>

      <nav class="ai-luxury-footer__nav-{{ ai_gen_id }}">
        {% if block.settings.menu_1 != blank %}
          <div class="ai-luxury-footer__nav-column-{{ ai_gen_id }}">
            <h3 class="ai-luxury-footer__nav-title-{{ ai_gen_id }}">{{ block.settings.menu_1_title }}</h3>
            <ul class="ai-luxury-footer__nav-list-{{ ai_gen_id }}">
              {% for link in linklists[block.settings.menu_1].links %}
                <li class="ai-luxury-footer__nav-item-{{ ai_gen_id }}">
                  <a href="{{ link.url }}" class="ai-luxury-footer__nav-link-{{ ai_gen_id }}">
                    {{ link.title }}
                  </a>
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}

        {% if block.settings.menu_2 != blank %}
          <div class="ai-luxury-footer__nav-column-{{ ai_gen_id }}">
            <h3 class="ai-luxury-footer__nav-title-{{ ai_gen_id }}">{{ block.settings.menu_2_title }}</h3>
            <ul class="ai-luxury-footer__nav-list-{{ ai_gen_id }}">
              {% for link in linklists[block.settings.menu_2].links %}
                <li class="ai-luxury-footer__nav-item-{{ ai_gen_id }}">
                  <a href="{{ link.url }}" class="ai-luxury-footer__nav-link-{{ ai_gen_id }}">
                    {{ link.title }}
                  </a>
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}

        {% if block.settings.menu_3 != blank %}
          <div class="ai-luxury-footer__nav-column-{{ ai_gen_id }}">
            <h3 class="ai-luxury-footer__nav-title-{{ ai_gen_id }}">{{ block.settings.menu_3_title }}</h3>
            <ul class="ai-luxury-footer__nav-list-{{ ai_gen_id }}">
              {% for link in linklists[block.settings.menu_3].links %}
                <li class="ai-luxury-footer__nav-item-{{ ai_gen_id }}">
                  <a href="{{ link.url }}" class="ai-luxury-footer__nav-link-{{ ai_gen_id }}">
                    {{ link.title }}
                  </a>
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}
      </nav>
    </div>

    {% if block.settings.show_newsletter %}
      <div class="ai-luxury-footer__middle-{{ ai_gen_id }}">
        <div class="ai-luxury-footer__newsletter-{{ ai_gen_id }}">
          <h3 class="ai-luxury-footer__newsletter-title-{{ ai_gen_id }}">{{ block.settings.newsletter_title }}</h3>
          <p class="ai-luxury-footer__newsletter-text-{{ ai_gen_id }}">{{ block.settings.newsletter_text }}</p>
          
          {%- form 'customer' -%}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="ai-luxury-footer__newsletter-form-{{ ai_gen_id }}">
              <input
                type="email"
                name="contact[email]"
                class="ai-luxury-footer__newsletter-input-{{ ai_gen_id }}"
                value="{{ form.email }}"
                aria-required="true"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                {% if form.errors %}
                  aria-invalid="true"
                  aria-describedby="ai-luxury-footer-newsletter-error-{{ ai_gen_id }}"
                {% endif %}
                {% if form.posted_successfully? %}
                  aria-describedby="ai-luxury-footer-newsletter-success-{{ ai_gen_id }}"
                {% endif %}
                placeholder="{{ block.settings.newsletter_placeholder }}"
                required
              >
              <button type="submit" class="ai-luxury-footer__newsletter-button-{{ ai_gen_id }}">
                {{ block.settings.newsletter_button }}
              </button>
            </div>
          {%- endform -%}

          {%- if form.errors -%}
            <div
              id="ai-luxury-footer-newsletter-error-{{ ai_gen_id }}"
              class="ai-luxury-footer__newsletter-error-{{ ai_gen_id }}"
            >
              {{ form.errors.messages.email }}
            </div>
          {%- endif -%}
          {%- if form.posted_successfully? -%}
            <div
              id="ai-luxury-footer-newsletter-success-{{ ai_gen_id }}"
              class="ai-luxury-footer__newsletter-success-{{ ai_gen_id }}"
            >
              {{ block.settings.newsletter_success }}
            </div>
          {%- endif -%}
        </div>
      </div>
    {% endif %}

    <div class="ai-luxury-footer__bottom-{{ ai_gen_id }}">
      <div class="ai-luxury-footer__social-{{ ai_gen_id }}">
        {% if block.settings.social_instagram != blank %}
          <a href="{{ block.settings.social_instagram }}" class="ai-luxury-footer__social-link-{{ ai_gen_id }}" target="_blank" rel="noopener" aria-label="Instagram">
            <svg class="ai-luxury-footer__social-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
          </a>
        {% endif %}
        {% if block.settings.social_facebook != blank %}
          <a href="{{ block.settings.social_facebook }}" class="ai-luxury-footer__social-link-{{ ai_gen_id }}" target="_blank" rel="noopener" aria-label="Facebook">
            <svg class="ai-luxury-footer__social-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
            </svg>
          </a>
        {% endif %}
        {% if block.settings.social_twitter != blank %}
          <a href="{{ block.settings.social_twitter }}" class="ai-luxury-footer__social-link-{{ ai_gen_id }}" target="_blank" rel="noopener" aria-label="Twitter">
            <svg class="ai-luxury-footer__social-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
            </svg>
          </a>
        {% endif %}
        {% if block.settings.social_pinterest != blank %}
          <a href="{{ block.settings.social_pinterest }}" class="ai-luxury-footer__social-link-{{ ai_gen_id }}" target="_blank" rel="noopener" aria-label="Pinterest">
            <svg class="ai-luxury-footer__social-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <circle cx="12" cy="12" r="10"></circle>
              <path d="M8 12c0-2.21 1.79-4 4-4 2.76 0 5 2.24 5 5 0 2.485-1.79 4.5-4 4.5-.5 0-1-.1-1.5-.3L10 21"></path>
            </svg>
          </a>
        {% endif %}
      </div>

      <div class="ai-luxury-footer__copyright-{{ ai_gen_id }}">
        {{ block.settings.copyright_text }}
      </div>

      {% if block.settings.show_payment_icons %}
        <div class="ai-luxury-footer__payment-{{ ai_gen_id }}">
          {{ shop.enabled_payment_types | payment_type_svg_tag }}
        </div>
      {% endif %}
    </div>
  </div>
</footer>

